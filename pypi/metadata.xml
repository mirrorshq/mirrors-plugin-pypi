<?xml version="1.0" encoding="utf-8"?>
<plugin id="pypi">
  <mirror-site id="pypi">
    <name>PyPI</name>
    <storage>file</storage>
    <advertiser>
      <interface>file:http</interface>
    </advertiser>
    <initializer>
      <executable>update.py</executable>
    </initializer>
    <updater>
      <executable>update.py</executable>
      <cron-expression>0 4 * * *</cron-expression>
    </updater>
  </mirror-site>
</plugin>
