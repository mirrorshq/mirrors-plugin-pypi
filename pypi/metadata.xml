<?xml version="1.0" encoding="utf-8"?>
<plugin id="pypi">
  <file-mirror id="pypi">
    <name>PyPI</name>
    <data-directory>pypi</data-directory>
    <initializer>
      <executable>update.py</executable>
    </initializer>
    <updater>
      <executable>update.py</executable>
      <cron-expression>0 0 * * 0</cron-expression>
    </updater>
    <advertiser>
      <protocol>http</protocol>
      <protocol>ftp</protocol>
    </advertiser>
  </file-mirror>
</plugin>
